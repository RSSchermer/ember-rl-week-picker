{{#unless flatMode}}
  <div class='buttons'>
    <button class='decrease-btn' {{action 'decreaseWeek'}}>{{{decreaseButtonText}}}</button>
    <button class='picker-toggle-btn rl-dropdown-toggle' {{action 'toggleDropdown'}}>
      {{#if weekText}}
        {{weekText}}
      {{else}}
        {{{weekPlaceholderText}}}
      {{/if}}
      <i class='caret'></i>
    </button>
    <button class='increase-btn' {{action 'increaseWeek'}}>{{{increaseButtonText}}}</button>
  </div>
{{/unless}}

{{#if pickerVisible}}
  <div class='picker rl-dropdown'>
    {{#if monthPickerMode}}
      {{rl-month-picker flatMode=true previousPageButtonText=previousPageButtonText nextPageButtonText=nextPageButtonText
        pickedMonth="pickedMonth" monthLabels=monthLabels year=displayedYear monthNumber=displayedMonthNumber}}
    {{else}}
      <div class='page-controls'>
        <button class='previous-page-btn' {{action 'previousPage'}}>{{{previousPageButtonText}}}</button>
        <button class='month-picker-toggle-btn' {{action 'openMonthPicker'}}>
          {{monthText}} <i class='caret'></i>
        </button>
        <button class='next-page-btn' {{action 'nextPage'}}>{{{nextPageButtonText}}}</button>
      </div>

      <table class='week-table'>
        <thead>
          <tr>
            <th class="week-column-header">W#</th>
            {{#each dayLabel in dayLabelsArray}}
              <th>{{dayLabel}}</th>
            {{/each}}
          </tr>
        </thead>

        <tbody>
          {{#each week in weeks}}
            <tr {{bind-attr class="week.isActive:active"}} {{action 'pickedWeek' week.year week.weekNumber}}>
              <td class="week-column">{{week.weekNumber}}</td>
              {{#each day in week.days}}
                <td {{bind-attr class="day.inDisplayedMonth:in-month:not-in-month"}}>{{day.date}}</td>
              {{/each}}
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  </div>
{{/if}}
